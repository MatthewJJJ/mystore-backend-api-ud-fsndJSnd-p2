{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-case-declarations": "off",
        "@typescript-eslint/ban-types": "off",
        "prefer-const": "off"
    }
}
